# Trello
TRELLO_API_KEY=your_trello_api_key
TRELLO_TOKEN=your_trello_token
TRELLO_BOARD_ID=your_board_id

# WhatsApp (Meta Cloud API)
WHATSAPP_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_verify_token

# LLM (Gemini or OpenAI)
# Provider can be 'gemini' or 'openai'
LLM_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key

# Server
# URL pública do servidor (necessário para webhooks, use ngrok para dev local)
SERVER_PUBLIC_URL=https://your-ngrok-url.ngrok-free.app

# Admin
# Número de telefone para receber notificações ativas (formato internacional sem +)
ADMIN_PHONE=5511999999999
